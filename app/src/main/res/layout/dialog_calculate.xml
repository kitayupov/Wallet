<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/calculate_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/edit"
            android:layout_toStartOf="@+id/button_clear"
            android:minLines="2"
            android:textAlignment="center"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/button_clear"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/button_clear"
            android:layout_marginLeft="@dimen/calculate_button_margin"
            android:layout_toStartOf="@+id/button_clear"
            android:background="@color/colorBackground"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/button_clear"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/text"
            android:background="@android:color/transparent"
            android:src="@drawable/backspace" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_numeric_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/calculate_button_margin"
            android:layout_weight="1"
            android:background="@drawable/calculate_button"
            android:text="1"
            android:textColor="@color/colorTextLight"
            android:textSize="@dimen/calculate_text_size"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_numeric_2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/calculate_button_margin"
            android:layout_weight="1"
            android:background="@drawable/calculate_button"
            android:text="2"
            android:textColor="@color/colorTextLight"
            android:textSize="@dimen/calculate_text_size"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_numeric_3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/calculate_button_margin"
            android:layout_weight="1"
            android:background="@drawable/calculate_button"
            android:text="3"
            android:textColor="@color/colorTextLight"
            android:textSize="@dimen/calculate_text_size"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_add"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/calculate_button_margin"
            android:layout_weight="1"
            android:background="@drawable/calculate_button"
            android:text="+"
            android:textColor="@color/colorTextLight"
            android:textSize="@dimen/calculate_text_size"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_numeric_4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/calculate_button_margin"
            android:layout_weight="1"
            android:background="@drawable/calculate_button"
            android:text="4"
            android:textColor="@color/colorTextLight"
            android:textSize="@dimen/calculate_text_size" />

        <Button
            android:id="@+id/button_numeric_5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/calculate_button_margin"
            android:layout_weight="1"
            android:background="@drawable/calculate_button"
            android:text="5"
            android:textColor="@color/colorTextLight"
            android:textSize="@dimen/calculate_text_size" />

        <Button
            android:id="@+id/button_numeric_6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/calculate_button_margin"
            android:layout_weight="1"
            android:background="@drawable/calculate_button"
            android:text="6"
            android:textColor="@color/colorTextLight"
            android:textSize="@dimen/calculate_text_size" />

        <Button
            android:id="@+id/button_subtract"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/calculate_button_margin"
            android:layout_weight="1"
            android:background="@drawable/calculate_button"
            android:text="-"
            android:textColor="@color/colorTextLight"
            android:textSize="@dimen/calculate_text_size" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_numeric_7"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/calculate_button_margin"
            android:layout_weight="1"
            android:background="@drawable/calculate_button"
            android:text="7"
            android:textColor="@color/colorTextLight"
            android:textSize="@dimen/calculate_text_size" />

        <Button
            android:id="@+id/button_numeric_8"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/calculate_button_margin"
            android:layout_weight="1"
            android:background="@drawable/calculate_button"
            android:text="8"
            android:textColor="@color/colorTextLight"
            android:textSize="@dimen/calculate_text_size" />

        <Button
            android:id="@+id/button_numeric_9"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/calculate_button_margin"
            android:layout_weight="1"
            android:background="@drawable/calculate_button"
            android:text="9"
            android:textColor="@color/colorTextLight"
            android:textSize="@dimen/calculate_text_size" />

        <Button
            android:id="@+id/button_multiply"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/calculate_button_margin"
            android:layout_weight="1"
            android:background="@drawable/calculate_button"
            android:text="*"
            android:textColor="@color/colorTextLight"
            android:textSize="@dimen/calculate_text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_dot"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/calculate_button_margin"
            android:layout_weight="1"
            android:background="@drawable/calculate_button"
            android:text="."
            android:textColor="@color/colorTextLight"
            android:textSize="@dimen/calculate_text_size" />

        <Button
            android:id="@+id/button_numeric_0"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/calculate_button_margin"
            android:layout_weight="1"
            android:background="@drawable/calculate_button"
            android:text="0"
            android:textColor="@color/colorTextLight"
            android:textSize="@dimen/calculate_text_size" />

        <Button
            android:id="@+id/button_equal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/calculate_button_margin"
            android:layout_weight="1"
            android:background="@drawable/calculate_button"
            android:text="="
            android:textColor="@color/colorTextLight"
            android:textSize="@dimen/calculate_text_size" />

        <Button
            android:id="@+id/button_divide"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/calculate_button_margin"
            android:layout_weight="1"
            android:background="@drawable/calculate_button"
            android:text="/"
            android:textColor="@color/colorTextLight"
            android:textSize="@dimen/calculate_text_size" />

    </LinearLayout>

</LinearLayout>